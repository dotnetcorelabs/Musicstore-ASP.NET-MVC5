@model Album

<input type="hidden" asp-for="AlbumId" />

<div class="form-group">
    <label asp-for="GenreId" class="col-form-label"></label>
    <select asp-for="GenreId" asp-items="@ViewBag.GenreId" class="form-control">
        <option value="">Select</option>
    </select>
    <span asp-validation-for="GenreId" class="alert-danger"></span>
</div>

<div class="form-group">
    <label asp-for="ArtistId" class="col-form-label"></label>
    <select asp-for="ArtistId" asp-items="@ViewBag.ArtistId" class="form-control">
        <option value="">Select</option>
    </select>
    <span asp-validation-for="ArtistId" class="alert-danger"></span>
</div>

<div class="form-group">
    <label asp-for="Title" class="col-form-label"></label>
    <input asp-for="Title" class="form-control" />
    <span asp-validation-for="Title" class="alert-danger"></span>
</div>

<div class="form-group">
    <label asp-for="Price" class="col-form-label"></label>
    <input asp-for="Price" class="form-control" />
    <span asp-validation-for="Price" class="alert-danger"></span>
</div>

<div class="form-group">
    <label asp-for="AlbumArtUrl" class="col-form-label"></label>
    <input asp-for="AlbumArtUrl" class="form-control" />
    <span asp-validation-for="AlbumArtUrl" class="alert-danger"></span>
</div>