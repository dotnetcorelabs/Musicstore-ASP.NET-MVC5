@model IReadOnlyList<UserViewModel>

@{
    ViewBag.Title = "Index";
}

<h1>Users - <em>Fresh</em> off the grill</h1>
<div class="container">
    <div class="row">
        @if (Model.Count == 0)
        {
            <p class="alert-danger">It's empty. Please create the first user.</p>
        }

        <ul class="list-group list-group-flush">
            @foreach (var user in @Model)
            {
                <li class="list-group-item">@user.Email</li>
            }
        </ul>
    </div>
    <div class="row">
        <div class="col-md-12">
            <a asp-action="Index" asp-controller="Home" asp-area="Setup" class="btn btn-secondary" aria-pressed="true" role="button">Back</a>
            <a asp-action="CreateUser" class="btn btn-primary" aria-pressed="true" role="button">Create</a>
        </div>
    </div>
</div>